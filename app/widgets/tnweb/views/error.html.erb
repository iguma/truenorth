<div class="sexyerror">
  <h2>There was an error.</h2>
  <% if !@website.errors.empty? %>
      <h3>Please address the following issues</h3>
      <hr>
      <ul>
        <%  @website.errors.each do |attribute,error| %>
            <li class="error_text"><%=  attribute.to_s.capitalize %> : <%=  error %> </li>
        <% end %>
      </ul>
  <% end %>
</div>
<br />